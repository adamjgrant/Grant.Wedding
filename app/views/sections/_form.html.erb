<ul data-component="tabs" id="section-editor" data-ks-tabs>
  <li class="open" data-persist-key="new_section_1">
    <a href="#text">Text</a>
  </li>
  <li data-persist-key="new_section_2">
    <a href="#image">Image</a>
  </li>
  <li data-persist-key="new_section_3">
    <a href="#custom">Custom</a>
  </li>
</ul>

<%= form_for([@page, @section]) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tab_pane_container">
    <article id="text" data-persist-key="new_section_4">
      <p><strong>Highly Recommended</strong>: For long content, write in a text editor on your computer where it will be saved, then paste in here when finished.</p>

      <div class="field z-priority">
        <%= f.label :content %>
        <%= f.text_area :content, class: "froala-editor" %>
      </div>

      <div class="field">
        <%= f.label :french_content %>
        <%= f.text_area :french_content, class: "froala-editor" %>
      </div>
    </article>

    <article id="image" data-persist-key="new_section_5">
      <div class="row">
        <% (1..55).each do |number| %>
          <% id = number.to_s.rjust(2, "0") %>
          <img
            class="square"
            src="http://cdn.everything.io/grant.wedding/<%= id %>.jpg"
            data-id="<%= id.to_s %>"
          />
        <% end %>
      </div>

      <div class="field">
        <%= f.label :path %>
        <%= f.text_area :path %>
      </div>
    </article>

    <article id="custom" data-persist-key="new_section_6">
      <div class="field">
        <%= f.label :tag %>
        <%= f.text_area :tag %>
      </div>

      <div class="field">
        <%= f.label :classname %>
        <%= f.text_area :classname %>
      </div>
    </article>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
